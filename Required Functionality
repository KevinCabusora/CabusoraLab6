
#include <msp430.h>

#define move	1000000
#define delay	3000000
#define smTurn	0500000
#define lgTurn	0750000

void main(void)
{

WDTCTL = WDTPW|WDTHOLD;                 // stop the watchdog timer

    P1DIR &= ~BIT3;
    P1REN |= BIT3;

    // Left Motor Pins
    P2DIR |= BIT0;	// 1,2EN as OUT
    P2DIR |= BIT1;  // Left motor directio
    P2DIR |= BIT2;							// P2.2 is associated with TA1CCR
    P2SEL |= BIT2;							// P2.2 is associated with TA1CCTL1

	// Right Motor Pins
   	P2DIR |= BIT5;  // 3,4EN as OUT
   	P2DIR |= BIT3;  // Right motor direction
   	P2DIR |= BIT4;							// P2.4 is associated with TA1CCR2
   	P2SEL |= BIT4;

    TA1CTL = ID_3 | TASSEL_2 | MC_1;		// Use 1:8 presclar off MCLK
    TA1CCR0 = 0x0100;						// set signal period

    TA1CCR1 = 0x0020;
    TA1CCTL1 = OUTMOD_7;

    TA1CCR2 = 0x0020;
    TA1CCTL2 = OUTMOD_3;

    while (1)
    {
    	moveForward();
    	__delay_cycles(move);
    	stopMove();
    	__delay_cycles(delay);

    	moveBackward();
    	__delay_cycles(move);
    	stopMove();
    	__delay_cycles(delay);

    	moveLeft();
    	__delay_cycles(smTurn);
    	stopMove();
    	__delay_cycles(delay);

    	moveRight();
    	__delay_cycles(smTurn);
    	stopMove();
    	__delay_cycles(delay);
    	
    	moveLeft();
    	__delay_cycles(lgTurn);
    	stopMove();
    	__delay_cycles(delay);

    	moveRight();
    	__delay_cycles(lgTurn);
    	stopMove();
    	__delay_cycles(delay);

    } // end loop
} // end main

void moveForward(){

	P2OUT |= BIT0;
	P2OUT |= BIT1;
	TA1CCTL1 = OUTMOD_7;

	P2OUT |= BIT5;
	P2OUT &= ~BIT3;
	TA1CCTL2 = OUTMOD_3;
}

void moveBackward(){

	P2OUT |= BIT0;
	P2OUT &= ~BIT1;
	TA1CCTL1 = OUTMOD_3;

	P2OUT |= BIT5;
	P2OUT |= BIT3;
	TA1CCTL2 = OUTMOD_7;
}

void stopMove(){

	P2OUT &= ~BIT0;
	P2OUT &= ~BIT5;
}

void moveLeft(){

	P2OUT |= BIT0;		// EN
	P2OUT &= ~BIT1;		// Reverse
	TA1CCTL1 = OUTMOD_3;					// set TACCTL1 to Reset / Set mode

		// right motor
	P2OUT |= BIT5;		// EN
	P2OUT &= ~BIT3;		// Forward
	TA1CCTL2 = OUTMOD_3;
}

void moveRight(){

	P2OUT |= BIT0;
	P2OUT |= BIT1;
	TA1CCTL1 = OUTMOD_7;

	P2OUT |= BIT5;
	P2OUT |= BIT3;
	TA1CCTL2 = OUTMOD_7;
}
